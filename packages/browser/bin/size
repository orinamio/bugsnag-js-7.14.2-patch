#!/usr/bin/env node

const { gzipSync } = require('zlib')
const { readFileSync } = require('fs')

const getSize = () => {
  const code = readFileSync(`${__dirname}/../dist/bugsnag.min.js`, 'utf8')
  const kb = (gzipSync(code).length / 1000).toFixed(2)
  return kb
}

const kb = getSize()
console.log(`${kb}kB`)
